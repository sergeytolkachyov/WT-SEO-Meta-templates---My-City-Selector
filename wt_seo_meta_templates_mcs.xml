<extension type="plugin" version="3.9" method="upgrade" group="system">
    <name>System - WT SEO Meta templates - My City Selector</name>
    <author>Sergey Tolkachyov</author>
    <authorEmail>info@web-tolk.ru</authorEmail>
    <authorUrl>https://web-tolk.ru/</authorUrl>
	<creationDate>20/05/2021</creationDate>
    <copyright>Sergey Tolkachyov</copyright>
    <license>GNU General Public License v3.0</license>
    <version>1.0.0</version>
    <description>My City Selector plugin provider for WT SEO Meta templates</description>
    <files>
        <filename plugin="wt_seo_meta_templates_mcs">wt_seo_meta_templates_mcs.php</filename>
        <folder>language</folder>
        <folder>fields</folder>
    </files>
	<languages folder="language" client="administrator">
        <language tag="en-GB">en-GB/en-GB.plg_system_wt_seo_meta_templates_mcs.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_system_wt_seo_meta_templates_mcs.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_wt_seo_meta_templates_mcs.sys.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.plg_system_wt_seo_meta_templates_mcs.sys.ini</language>
    </languages>
       <config>
        <fields name="params">
            <fieldset name="basic">
                <field addfieldpath="plugins/system/wt_seo_meta_templates_mcs/fields" type="plugininfo" name="plugininfo"/>
                <field type="spacer" label="PLG_WT_SEO_META_TEMPLATES_MCS_VARIABLES"/>
            </fieldset>
        </fields>
    </config>
	<updateservers>
        <server type="extension" name="WebTolkUpdateServer">https://web-tolk.ru/component/swjprojects/jupdate.html?element=wt_seo_meta_templates_mcs</server>
    </updateservers>
</extension>